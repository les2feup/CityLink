{
    "@context": [
        "https://www.w3.org/2022/wot/td/v1.1",
        "https://raw.githubusercontent.com/w3c/wot-binding-templates/refs/heads/main/bindings/protocols/mqtt/context.jsonld",
        "https://raw.githubusercontent.com/les2feup/CityLink/refs/heads/main/context.jsonld"
    ],
    "@type": [
        "tm:ThingModel",
        "citylink:EmbCTM"
    ],
    "title": "MQTT Micropython Embedded Core",
    "description": "Models the core functionality of the CityLink uMQTT Embedded Core runtime, an implementation of the generic micropython EmbC TM that uses MQTT as the underlying communications protocol.",
    "version": {
        "model": "0.1.0"
    },
    "links": [
        {
            "rel": "tm:extends",
            "href": "https://raw.githubusercontent.com/les2feup/CityLink/refs/heads/main/ThingModels/embeddedCore/micropython_core.tm.json",
            "type": "application/tm+json"
        },
        {
            "rel": "citylink:controlledBy",
            "href": "https://raw.githubusercontent.com/les2feup/citylink-edgenode/refs/heads/main/ThingModels/controllers/mqtt-mpy-core-controller.tm.json",
            "type": "application/tm+json"
        }
    ],
    "properties": {
        "logLevel": {
            "forms": [
                {
                    "href": "{{CITYLINK_HREF}}",
                    "mqv:filter": "{{CITYLINK_CORE_PROPERTY}}/logLevel",
                    "op": [
                        "readproperty",
                        "observeproperty",
                        "unobserveproperty"
                    ],
                    "mqv:qos": 1,
                    "mqv:retain": true,
                    "contentType": "application/json"
                }
            ]
        },
        "status": {
            "forms": [
                {
                    "href": "{{CITYLINK_HREF}}",
                    "mqv:filter": "{{CITYLINK_CORE_PROPERTY}}/status",
                    "op": [
                        "readproperty",
                        "observeproperty",
                        "unobserveproperty"
                    ],
                    "mqv:qos": 1,
                    "mqv:retain": true,
                    "contentType": "application/json"
                }
            ]
        }
    },
    "events": {
        "log": {
            "forms": [
                {
                    "href": "{{CITYLINK_HREF}}",
                    "mqv:filter": "{{CITYLINK_CORE_EVENT}}/log",
                    "op": [
                        "subscribeevent",
                        "unsubscribeevent"
                    ],
                    "mqv:qos": 0,
                    "mqv:retain": false,
                    "contentType": "application/json"
                }
            ]
        },
        "OTAUReport": {
            "title": "Core VFS Action Response",
            "description": "Response for the last Virtual File System action.",
            "data": {
                "type": "object",
                "properties": {
                    "timestamp": {
                        "type": "object",
                        "title": "Epoch Timestamp",
                        "properties": {
                            "epoch_year": {
                                "type": "integer",
                                "title": "Epoch",
                                "description": "Base year for the seconds field. Usually 1970, but some embedded systems might use a different base.",
                                "default": 1970
                            },
                            "seconds": {
                                "type": "integer",
                                "title": "Seconds",
                                "description": "Seconds since the Unix epoch."
                            }
                        },
                        "required": [
                            "seconds"
                        ]
                    },
                    "result": {
                        "oneOf": [
                            {
                                "type": "object",
                                "title": "Write Success",
                                "properties": {
                                    "error": {
                                        "const": false
                                    },
                                    "written": {
                                        "type": "string",
                                        "title": "Written File Path"
                                    }
                                },
                                "required": [
                                    "written"
                                ]
                            },
                            {
                                "type": "object",
                                "title": "Delete Success",
                                "properties": {
                                    "error": {
                                        "const": false
                                    },
                                    "deleted": {
                                        "type": "array",
                                        "title": "Deleted File Path(s)",
                                        "description": "List of files or directories that were successfully deleted.",
                                        "items": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "required": [
                                    "deleted"
                                ]
                            },
                            {
                                "type": "object",
                                "title": "Error",
                                "properties": {
                                    "error": {
                                        "const": true
                                    },
                                    "message": {
                                        "type": "string",
                                        "title": "Error Message",
                                        "description": "Description of the error that occurred."
                                    }
                                },
                                "required": [
                                    "error",
                                    "message"
                                ]
                            }
                        ]
                    }
                },
                "required": [
                    "timestamp",
                    "result"
                ]
            },
            "forms": [
                {
                    "href": "{{CITYLINK_HREF}}",
                    "mqv:filter": "{{CITYLINK_CORE_EVENT}}/otau/report",
                    "op": [
                        "subscribeevent",
                        "unsubscribeevent"
                    ],
                    "mqv:qos": 1,
                    "mqv:retain": false,
                    "contentType": "application/json"
                }
            ]
        }
    },
    "actions": {
        "OTAUInit": {
            "forms": [
                {
                    "href": "{{CITYLINK_HREF}}",
                    "mqv:topic": "{{CITYLINK_CORE_ACTION}}/otau/init",
                    "op": [
                        "invokeaction"
                    ],
                    "mqv:qos": 1,
                    "mqv:retain": false
                }
            ]
        },
        "OTAUFinish": {
            "forms": [
                {
                    "href": "{{CITYLINK_HREF}}",
                    "mqv:topic": "{{CITYLINK_CORE_ACTION}}/otau/finish",
                    "op": [
                        "invokeaction"
                    ],
                    "mqv:qos": 1,
                    "mqv:retain": false
                }
            ]
        },
        "OTAUWrite": {
            "input": {
                "properties": {
                    "payload": {
                        "properties": {
                            "data": {
                                "type": "string",
                                "contentEncoding": "base64"
                            },
                            "algo": {
                                "const": "crc32"
                            }
                        }
                    }
                }
            },
            "forms": [
                {
                    "href": "{{CITYLINK_HREF}}",
                    "mqv:topic": "{{CITYLINK_CORE_ACTION}}/otau/write",
                    "op": [
                        "invokeaction"
                    ],
                    "mqv:qos": 1,
                    "mqv:retain": false,
                    "contentType": "application/json"
                }
            ]
        },
        "OTAUDelete": {
            "forms": [
                {
                    "href": "{{CITYLINK_HREF}}",
                    "mqv:topic": "{{CITYLINK_CORE_ACTION}}/otau/delete",
                    "op": [
                        "invokeaction"
                    ],
                    "mqv:qos": 1,
                    "mqv:retain": false,
                    "contentType": "application/json"
                }
            ]
        }
    }
}
